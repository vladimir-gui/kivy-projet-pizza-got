#:import utils kivy.utils

MainWidget:


<MainWidget>:
    recycleView: recycleView
    RecycleView:
        id: recycleView
        viewclass: 'PizzaWidget'
        RecycleBoxLayout:
            default_size: None, dp(100)
            default_size_hint: 1, None
            size_hint_y: None
            height: self.minimum_height
            orientation: 'vertical'

<LeftAlignLabel@Label>:
    halign: "left"
    valign: "center"
    text_size: self.size
    canvas.before:
        Color:
            rgb: utils.get_random_color()
        Rectangle:
            pos: self.pos
            size: self.size

<RightAlignLabel@Label>:
    halign: "right"
    valign: "center"
    text_size: self.size
    canvas.before:
        Color:
            rgb: utils.get_random_color()
        Rectangle:
            pos: self.pos
            size: self.size

<LabelTailleManuel@Label>:
    size_hint: None, None
    size: self.texture_size

<PizzaWidget>:
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            spacing: dp(10)
            LabelTailleManuel:
                text: root.nom
            LabelTailleManuel:
                text: "VEGETARIENNE" if root.vegetarienne else ""
        LeftAlignLabel:
            text: root.ingredients
    RightAlignLabel:
        text: str(root.prix) + " â‚¬"



